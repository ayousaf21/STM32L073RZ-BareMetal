#include "timer.h"


void TIM2_1HZ_init(void)
{
	// Enable clock to TIM2
	RCC->APB1ENR |= APB1_TIM2_EN;
	// Set Prescalar Value; CLKSRC is 16Mhz
	TIM2->PSC |= 3199;	// 16 000 000 / 3 200 = 5 000
	// Set auto-reload register
	TIM2->ARR |= 9999; // 10 000 / 10 000 = 1Hz
	//  reset counter
	TIM2->CNT = 0;

	// Enable TIM2
	TIM2->CR1 |= TIM2_EN;

}
